{
    // jshint
    "jshint.options": {
        "esversion": 6
    },

    // C++
    "C_Cpp.intelliSenseEngine": "Default",

    // Code Spell Checker
    "cSpell.language": "en-GB",
    "cSpell.userWords": [
        "ardublockly",
        "arduino",
        "blockly",
        "microbit",
        "micro:bit",
        "hyperduino",
        "duino",
        "hyperfirmata",
        "firmata",
        "analog",
        "playlist",
        "GitHub",
        "carlosperate"
    ],
    // Python
    "python.pythonPath": "/usr/local/bin/python3",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": true,
}
